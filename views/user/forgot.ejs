<% layout('layout') %>

<div class="container">
    <br><br>
    <div class="text-center reg_msg">
        <h1><a href="/">RateMe</a></h1>
    </div>
   <br><br>
   
   <div class="text-center reg_msg">
        <h2 class="fancy"><span>Enter your email</span></h2>
   </div><br>
   <p class="text-center">Please enter your email and password</p>
    <div class="row signup">
            <% if(hasErrors) {%>
                <% for(var i =0; i <messages.length; i++) { %>
                    <div class="alert alert-danger">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
                        <%= messages[i] %>
                    </div>
                <% }%>
            <% }%>
            <% if(noErrors) {%>
                    <div class="alert alert-danger">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
                        <%= info %>
                    </div>
            <% }%>
        <form method="POST" class="" id="signupForm" action="/forgot">    
            <div class="form-group input_group">
                <input id="email" class="form-control" name="email" type="text" autocomplete="on" placeholder="EMAIL" style="margin-bottom:20px;">
            </div>

            <div class="form-group">
                <input type="submit" id="login" value="Send" class="form-control btn btn-primary" name="login" style="">
            </div>

          </form>

          <div>
              <h4 class="pull-left">Already have an account? <a href="/signup">Sign up</a></h4>
              <h4 class="pull-rigth">Forgot your<a href="/forgot">password?</a></h4>
          </div>


    </div>
</div>
